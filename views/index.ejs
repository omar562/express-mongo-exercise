<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>MY APP</title>
</head>

<body>
    <h1>My Blog</h1>
    <h2>Create a new post</h2>

    <form action="/add" method="POST" onSubmit="return isEmpty()">
        <input type="hidden" id="date" name="date">
        <input id="title" type="text" placeholder="Title" name="title">
        <br><br>
        <textarea id="text" rows="5" cols="50" type="text" placeholder="Text" name="text"></textarea>
        <br><br>
        <button type="submit">Add Post</button>
    </form>
    <br>
    <h2>Old posts</h2>
    <p>
        <span>Sort by </span>
        <span><a href="/default/<%= page%>">Id</a></span>
        <span><a href="/title/<%= page%>">Name</a></span>
        <span><a href="/date/<%= page%>">Date</a></span>
    </p>
    <ul class="quotes">
        <% for(var i=0; i<quotes.length; i++) {%>
            <li class="quote">
                <h3 style="margin:0; display: inline-block;">
                    <%= quotes[i].title %>
                </h3>
                <p>
                    <span><%= quotes[i].text.split(/\s+/).slice(0,4).join(' ') %></span>
                    <span><a href="/read/<%= quotes[i]._id %>">read more...</a></span><br><br>
                    <a style="color:#FF0000;" onclick="return confirm('Are you sure?')" href="/delete/<%= quotes[i]._id %>">delete post</a><br><br>
                    <a style="color:#008000;" href="/edit/<%= quotes[i]._id %>">edit post</a>
                    <span>last updated <%= quotes[i].date %></span>
                </p>
            </li>
            <% } %>
                <p>

                    <% if(previous) {%>
                        <a href="<%=previous%>" class="previous">&laquo; Previous</a>
                        <% } %>
                            <% if(next) {%>
                                <a href="<%=next%>" class="next"> Next &raquo;</a>
                                <% } %>

                </p>
    </ul>

</body>

</html>
<script>
    n = new Date();
    y = n.getFullYear();
    m = n.getMonth() + 1;
    d = n.getDate();
    document.getElementById("date").value = m + "/" + d + "/" + y;

    function isEmpty() {
        var bool1 = true;
        var bool2 = true;
        if (document.getElementById("title").value == '') {
            document.getElementById("title").style.borderColor = "red";
            bool1 = false;
        }
        if (document.getElementById("text").value == '') {
            document.getElementById("text").style.borderColor = "red";
            bool2 = false;
        }
        if (bool1 == false || bool2 == false) {
            return false;
        }
        return true;
    }

</script>
